<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.claudiu.investitiipublice.IRUserInterface.MainActivity" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView3"
            android:layout_weight="2" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/transparentLayer"
            android:layout_weight="1"
            android:background="#b8424242"
            android:paddingBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:gravity="start" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/info1"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:gravity="start" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/info2"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:gravity="start" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/info3"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:gravity="start" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/info4"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:gravity="start" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="#ffffff"
                    android:gravity="start" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|top">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Ok"
                    android:id="@+id/okButton"
                    android:gravity="center"
                    android:background="@drawable/rounded_ok_button"
                    android:textColor="#ffffff"
                    android:layout_gravity="center" />
            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

    <SeekBar
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal|bottom"
        android:paddingBottom="30dp"
        android:scrollIndicators="start|end"
        android:progress="30"
        android:focusableInTouchMode="true" />

</FrameLayout>